{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"@repo/core": ["packages/core/src/index.ts"],
			"@repo/core/*": ["packages/core/src/*"]
		},
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true
	},
	"references": [
		{ "path": "packages/core" },
		{ "path": "packages/obsidian" },
		{ "path": "packages/cli" }
	],
	"include": [],
	"exclude": ["node_modules"]
}
