{
	"name": "obsidian-incremental-reading",
	"version": "1.0.0",
	"description": "SuperMemo-inspired incremental reading with extracts, cloze deletions, and spaced repetition.",
	"author": "Johan Dahlin",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"typecheck": "tsc -p tsconfig.build.json -noEmit -skipLibCheck && tsc -p src/tests/tsconfig.json -noEmit -skipLibCheck",
		"typecheck:cli": "tsc -p src/engine/cli/tsconfig.json --noEmit",
		"build": "tsc -p tsconfig.build.json -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"cli": "npx tsx src/engine/cli/index.tsx",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint .",
		"test": "vitest run --coverage",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky"
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"semi": true,
		"trailingComma": "all",
		"endOfLine": "lf"
	},
	"nano-staged": {
		"**/*.{js,jsx,ts,tsx,mjs,cjs}": [
			"prettier --write",
			"eslint --fix"
		],
		"**/*.{json,md,css,scss,yml,yaml}": [
			"prettier --write"
		]
	},
	"keywords": [
		"obsidian",
		"incremental-reading",
		"spaced-repetition",
		"flashcards",
		"cloze",
		"learning"
	],
	"license": "MIT",
	"devDependencies": {
		"@codemirror/state": "6.5.0",
		"@codemirror/view": "^6.29.1",
		"@eslint/js": "9.30.1",
		"@types/better-sqlite3": "^7.6.0",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^22.19.5",
		"@types/react": "^18.3.27",
		"@vitest/coverage-v8": "^4.0.16",
		"esbuild": "0.25.5",
		"eslint-plugin-obsidianmd": "0.1.9",
		"globals": "14.0.0",
		"husky": "^9.1.7",
		"ink": "^5.2.1",
		"jiti": "2.6.1",
		"meow": "^13.2.0",
		"nano-staged": "^0.9.0",
		"prettier": "^3.7.4",
		"react": "^18.3.1",
		"terminal-image": "^4.2.0",
		"tslib": "2.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.35.1",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"better-sqlite3": "^11.0.0",
		"ink-picture": "^1.3.3",
		"js-yaml": "^4.1.1",
		"obsidian": "latest",
		"preact": "^10.26.9",
		"ts-fsrs": "^5.2.3",
		"yaml": "^2.8.2"
	},
	"overrides": {
		"phin": "^3.7.1"
	}
}
